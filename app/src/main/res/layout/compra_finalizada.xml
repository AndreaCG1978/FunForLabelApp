<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_body"
    android:layout_marginBottom="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

        <ImageView
            android:layout_width="320dp"
            android:layout_height="100dp"
            android:src="@drawable/store_logo"
            android:gravity="center_horizontal"
            />



        <TextView
            android:id="@+id/textWellcomeUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_gris_oscuro"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textSize="14sp"
            android:fontFamily="sans-serif-smallcaps"
            android:background="@android:color/white"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_margin="15dp"
            android:background="@drawable/custom_line" />


            <TextView
                android:id="@+id/textMensajeExito1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_negro"
                android:gravity="left"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:fontFamily="sans-serif"
                android:background="@android:color/white"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textEnvioMail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="17sp"
                    android:text="@string/enviar_mail"
                    android:fontFamily="sans-serif"
                    android:background="@android:color/white"
                    />
                <TextView
                    android:id="@+id/textConector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_negro"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:text="/"
                    android:fontFamily="sans-serif"
                    android:background="@android:color/white"
                    />
                <TextView
                    android:id="@+id/textEnvioWsp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="17sp"
                    android:text="@string/enviar_wsp"
                    android:fontFamily="sans-serif"
                    android:background="@android:color/white"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/textMensajeExito2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_negro"
                android:gravity="left"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:fontFamily="sans-serif"
                android:background="@android:color/white"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="25dp">

                <Button android:id="@+id/btnLimpiarCarrito"
                    android:layout_width="wrap_content"
                    android:text="@string/limpiarCarrito"
                    android:layout_height="35dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="15dp"
                    android:padding="7dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/custom_button"
                    android:textColor="@android:color/holo_red_dark"
                    />
                <Button android:id="@+id/btnFinalizar"
                    android:layout_width="wrap_content"
                    android:text="@string/volver"
                    android:layout_height="35dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="15dp"
                    android:padding="7dp"

                    android:background="@drawable/custom_button"
                    android:textColor="@android:color/holo_red_dark"
                    />
            </LinearLayout>

        </LinearLayout>



</LinearLayout>