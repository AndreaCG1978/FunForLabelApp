<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/bg_body1"
    android:layout_marginBottom="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

        <ImageView
            android:layout_width="320dp"
            android:layout_height="100dp"
            android:src="@drawable/store_logo"
            android:gravity="center_horizontal"
            />



        <TextView
            android:id="@+id/textWellcomeUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_gris_oscuro"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textSize="14sp"
            android:fontFamily="sans-serif-smallcaps"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_margin="15dp"
            android:background="@drawable/custom_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detalle_compra"
            android:textColor="@color/color_gris_oscuro"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:textSize="17sp"
            android:fontFamily="sans-serif-smallcaps"
            />

        <TextView
            android:id="@+id/textDetalleTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_negro"
            android:gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:textSize="15sp"

            />

            <TextView
                android:id="@+id/textMontoSubtotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_dark"
                android:gravity="left"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:textSize="17sp"
                android:textStyle="bold"

                />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/direccion_envio_title"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/color_gris_oscuro"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:textSize="13sp"
            android:fontFamily="sans-serif-smallcaps"
            />

            <TextView
                android:id="@+id/textDirEnvio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_negro"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="15sp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forma_envio_title"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/color_gris_oscuro"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:textSize="13sp"
                android:fontFamily="sans-serif-smallcaps"
                />

            <TextView
                android:id="@+id/textFormaEnvio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_dark"
                android:layout_marginTop="25dp"
                android:gravity="left"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:textSize="16sp"
               />

            <TextView
                android:id="@+id/textFormaEnvioDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_negro"
                android:gravity="left"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:textSize="14sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forma_pago_title"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/color_gris_oscuro"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:textSize="13sp"
                android:fontFamily="sans-serif-smallcaps"
                />

            <TextView
                android:id="@+id/textFormaPago"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_negro"
                android:layout_marginTop="22dp"
                android:gravity="left"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:textSize="16sp"
                 />

            <TextView
                android:id="@+id/textMontoTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_dark"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:textSize="22sp"
                android:textStyle="bold"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enter_comment"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/color_gris_oscuro"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:textSize="15sp"
                android:fontFamily="sans-serif-smallcaps"
               />

            <EditText
                android:id="@+id/entryCommentPago"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="5"
                android:maxLines="5"
                android:gravity="left|top"
                android:padding="4dp"
                android:textSize="13sp"
                android:textColor="@color/color_gris_oscuro"
                android:background="@android:color/white"
                android:layout_margin="15dp"
                android:maxLength="220"

                />

            <Button android:id="@+id/btnFinalizar"
                android:layout_width="wrap_content"
                android:text="@string/finalizar_compra"
                android:layout_height="35dp"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="15dp"
                android:padding="7dp"
                android:layout_margin="25dp"
                android:background="@drawable/custom_button"
                android:textColor="@android:color/holo_red_dark"
                />


        </LinearLayout>

    </ScrollView>



</LinearLayout>