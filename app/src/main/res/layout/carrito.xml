<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal|center_vertical"
    android:background="@drawable/bg_body1">


        <ImageView
            android:layout_width="320dp"
            android:layout_height="100dp"
            android:src="@drawable/store_logo"
            android:gravity="center_horizontal"
            android:contentDescription="TODO" />



        <TextView
            android:id="@+id/textWellcomeUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_gris_oscuro"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textSize="14sp"
            android:fontFamily="sans-serif-smallcaps"

            />
            <View
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:layout_margin="15dp"
                android:background="@drawable/custom_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_gris_oscuro"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:textSize="20sp"
                    android:text="@string/su_carrito"
                    android:fontFamily="sans-serif-smallcaps"

                 />

                <TextView
                    android:id="@+id/totalPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_red_dark"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginStart="15dp"
                    android:fontFamily="sans-serif-smallcaps"

                    />



                <Button android:id="@+id/btnConfirmarCarrito"
                    android:layout_width="wrap_content"
                    android:text="@string/confirmar_carrito"
                    android:layout_height="30dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="15dp"
                    android:padding="7dp"
                    android:layout_marginStart="25dp"
                    android:background="@drawable/custom_button"
                    android:textColor="@android:color/holo_red_dark"
                    />
            </LinearLayout>

            <ListView
                android:id="@+id/listViewCarrito"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:dividerHeight="3dp"
                android:divider="@color/color_gris_claro"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical"

                />




</LinearLayout>